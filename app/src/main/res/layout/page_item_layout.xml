<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/post_background_color"
        android:layout_margin="5dp">

    <LinearLayout
            android:id="@+id/page_item_stamp_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/page_item_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />

        <TextView
                android:id="@+id/page_item_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"

                android:textColor="#FFFFFF" />

    </LinearLayout>

    <ImageView
            android:id="@+id/page_item_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_item_stamp_ll"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/page_item_sub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_item_iv" />

    <TextView
            android:id="@+id/page_iteminf_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45/45/45"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@id/page_item_iv"
            app:layout_constraintRight_toRightOf="@id/page_item_iv"
            app:layout_constraintTop_toBottomOf="@id/page_item_sub_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>